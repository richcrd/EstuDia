{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@navigation/*": ["navigation/*"],
      "@store/*": ["store/*"],
      "@context/*": ["context/*"],
      "@config/*": ["config/*"],
      "@types/*": ["types/*"],
    }
  },
  "include": ["src"]
}
